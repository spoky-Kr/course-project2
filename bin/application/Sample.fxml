<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="obnovit" mnemonicParsing="false" onAction="#onr" text="Обновить" />
            <Button fx:id="ydolit" mnemonicParsing="false" onAction="#ondel" text="Удалить" />
            <Button fx:id="izmenit" mnemonicParsing="false" onAction="#onref" text="Изменить" />
            <Button fx:id="dobavit" mnemonicParsing="false" onAction="#onadd" text="Добавить" />
        </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <TableView fx:id="table" prefHeight="301.0" prefWidth="613.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colUser" prefWidth="75.0" text="user" />
          <TableColumn fx:id="colPassword" prefWidth="75.0" text="password" />
        </columns>
      </TableView>
   </center>
</BorderPane>
